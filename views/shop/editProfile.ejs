<%- include('userHeader') %>
<%- include('userNavBar') %>

<section class="section-conten padding-y bg">
    <div class="container">
        <div class="row">
        <aside class="col-md-3">
            <!--   SIDEBAR   -->
            <ul class="list-group">
                <a class="list-group-item active" href="/userProfile">My Profile </a>
                <a class="list-group-item" href="/editUserProfile">Edit Profile </a>
                <a class="list-group-item" href="/userOrder">Orders</a>
            </ul>
            <br>
            <a class="btn btn-light btn-block" href="/logout"> <i class="fa fa-power-off"></i> <span class="text">Logout</span> </a> 
            <!--   SIDEBAR .//END   -->
        </aside>
        <main class="col-md-9">
            <article class="card">
            <header class="card-header">
                <h2 class="d-inline-block mr-3"> Edit Profile </h2>
                <% if(message.success){ %>
                   <div class="alert alert-success" role="alert">
                        <%= message.success %>
                   </div>   
                <% } %>
            </header>
            <article class="card mb-4">
             <div class="card-body">
               <form action="/saveEditProfile" method="post">
                <div class="row">
                    <div class="form-group col-sm-3">
                        <label>Name</label>
                    </div>
                    <div class="form-group col-sm-6">
                        <input type="hidden" value="<%= userData._id %>"  name="id">
                        <input type="text" class="form-control" value="<%= userData.name %>" name="fullName">
                     </div>
                   </div> 
                   <div class="row">
                    <div class="form-group col-sm-3">
                        <label>Email</label>
                     </div>
                    <div class="form-group col-sm-6">
                        <input type="email" class="form-control" value="<%= userData.email %>" name="email" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-3">
                        <label>Phone Number</label>
                     </div>
                    <div class="form-group col-sm-6">
                        <input type="text" class="form-control" value="<%= userData.mobile %>" name="mobile">
                    </div>
                  </div>
                </div> <!-- row.// -->	
                <div class="row">
                    <div class="form-group col-sm-3 text-center">
                        <input type="submit" value="Save " class="btn btn-secondary">
                     </div>
             </form>
        <!--Section: Design Block-->
       </div>
    </div>
</main>
</div> <!-- row.// -->
</div>
</section>
          
 <%- include('footer') %>