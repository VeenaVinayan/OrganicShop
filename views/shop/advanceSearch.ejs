
<%- include('userHeader') %>
<%- include('userNavBar') %>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg">
<div class="container">
	<h2 class="title-page text-muted">Search Here !</h2>
</div> <!-- container //  -->
</section>
<!-- ========================= SECTION INTRO END// ========================= -->

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
<div class="container">
<div class="row">
	<aside class="col-md-3">
		
<div class="card">
	<article class="filter-group">
		<header class="card-header">
			<a href="#" data-toggle="collapse" data-target="#collapse_1" aria-expanded="true" class="">
				<i class="icon-control fa fa-chevron-down"></i>
				<h6 class="title">Categories</h6>
			</a>
		</header>
		<form action="/searchProduct" method="post">
		<div class="filter-content collapse show" id="collapse_1">
			<div class="card-body">
			<select name="categoryId" class="form-control"> 		
		    <% category.forEach((row) => { %> 			
				<option  value="<%= row._id %>"><%= row.catName %></option>
			<% }) %>	
			
			</select>
			</div> <!-- card-body.// -->
		</div>
	</article> <!-- filter-group  .// -->
	<article class="filter-group">
		<header class="card-header">
			<a href="#" data-toggle="collapse" data-target="#collapse_4" aria-expanded="true" class="">
				<i class="icon-control fa fa-chevron-down"></i>
				<h6 class="title">Sort </h6>
			</a>
		</header>
		<div class="filter-content collapse show" id="collapse_4">
			<div class="card-body">
			  <h6 class="title">Sort By </h6>
			    <select name="sortType" id="sort" class="form-control" data-toggle="collapse">
                   <option value="1">Ascending</option>
				   <option value="-1">Descending</option>
				  
				</select>			 </div><!-- card-body.// -->
		</div>
	</article> <!-- filter-group .// -->
	
	<article class="filter-group">
		<header class="card-header">
			<a href="#" data-toggle="collapse" data-target="#collapse_3" aria-expanded="true" class="">
				<i class="icon-control fa fa-chevron-down"></i>
				<h6 class="title">Price range </h6>
			</a>
		</header>
		<div class="filter-content collapse show" id="collapse_3">
			<div class="card-body">
				
				<div class="form-row">
				<div class="form-group col-md-6">
				  <label>Min</label>
				  <!-- <input class="form-control" placeholder="$0" type="number"> -->
				  	<select class="mr-2 form-control" name="minRange">
						<option value="0">0</option>
						<option value="50">50</option>
						<option value="100">100</option>
						<option value="150">150</option>
						<option value="200">200</option>
						<option value="500">500</option>
						<option value="1000">1000</option>
					</select>
				</div>
				<div class="form-group text-right col-md-6">
				  <label>Max</label>
				  	<select class="mr-2 form-control" name="maxRange">
						<option value="100">100</option>
						<option value="150">150</option>
						<option value="200">200</option>
						<option value="500">500</option>
						<option value="1000">1000</option>
						<option value="2000">5000</option>
					</select>
				</div>
				</div> <!-- form-row.// -->
				<input type="submit" value="Submit" class="btn btn-secondary">
		      </form>	
			</div><!-- card-body.// -->
		</div>
	</article> <!-- filter-group .// -->
	
</div> <!-- card.// -->

	</aside> <!-- col.// -->
	<main class="col-md-9">

<header class="border-bottom mb-4 pb-3">
		<div class="form-inline">
			<span class="mr-md-auto"> </span>
		</div>
</header><!-- sect-heading -->

<div class="row">
	<% product.forEach((row) => { %> 
	<div class="col-md-4">
		<figure class="card card-product-grid">
			<div class="img-wrap"> 
				<img src="/images/productImages/<%= row.image[0] %>">
			</div> <!-- img-wrap.// -->
			<figcaption class="info-wrap">
				<div class="fix-height">
					<a href="./product-detail.html" class="title"><b><%= row.productName %></b></a>
					<div class="price-wrap mt-2">
						<span class="price"><%= row.varient[0].price %></span>
						<!-- <del class="price-old">$1980</del> -->
					</div> <!-- price-wrap.// -->
				</div>
				<a href="/productDetails/<%= row._id %>" class="btn btn-block btn-secondary">Added to cart </a>
			</figcaption>
		</figure>
	</div> <!-- col.// -->
	<% }) %>
	
	  
</main> <!-- col.// -->
</div>
<div class="pagination-area mt-30 mb-50">
	<nav aria-label="Page navigation example">
	  <ul class="pagination justify-content-center">
		<% if (currentPage > 1) { %>
		   <li class="page-item"><a href="/advanceSearch?page=<%= currentPage - 1 %>" class="page-link text-dark">Previous</a></li>
	    <% } %>
	    <li class="page-item"><a href="/advanceSearch?page=<%= currentPage %>" class="page-link active"><%= currentPage %></a></li>
	    <% if (currentPage < totalPages) { %>
			<li><a href="/advanceSearch?page=<%= currentPage + 1 %>" class="page-link text-dark">Next</a></li>
		<% } %>
		</ul>
	</nav>
   </div>

</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<%- include('footer') %>