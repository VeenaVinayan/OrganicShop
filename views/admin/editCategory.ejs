
<%- include('./includes/adminHead.ejs') %>
<%- include('./includes/adminNavbar.ejs') %>


<section class="content-main">
     <div class="content-header">
          <div>
              <h2 class="content-title card-title">Categories </h2>
              <p> Edit category</p>
          </div>
          <div>
              <input type="text" placeholder="Search Categories" class="form-control bg-white">
          </div>
      </div>  
     <div class="card ">
          <div class="card-body">
              <div class="row">
                  <div class="col-md-2">
                      <form action="/editCategorySubmit" method="post">
                          <div class="mb-4">
                              <label for="product_name" class="form-label"> Edit Category </label>
                              <input type="text" class="form-control" value="<%= category.catName %>" required name="catName" />
                              <input type="hidden" value="<%= category._id %>" name="categoryId">
                          </div>
                           <div class="d-grid form-group d-flex flex-row">
                               <input type="submit" class="btn btn-primary form-control" value="Edit category"> 
                               <a href="/category"><button class="btn btn-outline-secondary form-control"> Cancel </button></a>
                          </div>
                      </form>
                  </div>
               </div>
          </div>
     </div>
     </section>



