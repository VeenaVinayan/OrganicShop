    <script>
        const nameError= document.getElementById('nameError');
        const emailError= document.getElementById('emailError');
        const pwdError= document.getElementById('pwdError');
        const conPwdError= document.getElementById('conPwdError');
        const phoneError = document.getElementById('phoneError');

        function validateName(input) {
            const value = input.value.trim();
            if (value === "" || !/^[a-zA-Z/s.]/.test(value)|| (value.length <3 || value.length > 14) ) {
                input.setCustomValidity("Name Invalid.");
                nameError.style.display="block";
                nameError.innerHTML="Name validation error";
            } else {
                input.setCustomValidity("");
                showErrorMessage(input, "");
            }
        }  
        function validateEmail(input) {
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            const value =input.value.trim();
            if (value === "" || !emailPattern.test(value)) {
                input.setCustomValidity("Please enter a valid email address.");
                emailError.style.display="block";
                emailError.innerHTML="Email validation error";
            } else {
                input.setCustomValidity("");
                showErrorMessage(input, "");
            }
        } 
        function validatePhone(input) {
            const phonePattern = /^[7-9][0-9]{9}$/;
            const value = input.value.trim();
            if (!phonePattern.test(value) || value==="") {
                input.setCustomValidity("Please enter a valid 10-digit phone number.");
                phoneError.style.display="block";
                phoneError.innerHTML="Phone Number validation error";
            } else {
                input.setCustomValidity("");
                showErrorMessage(input, "");
            }
        }
