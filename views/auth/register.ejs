        function validatePassword(input) {
    const exp = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
    const value = input.value.trim();

    if (value.length < 8 || value.length > 20 || !exp.test(value) || value === "") {
        input.setCustomValidity("Password must be 8-20 characters, include uppercase, lowercase, number and special character.");
        pwdError.style.display = "block";
        pwdError.innerHTML = "Password validation error";
    } else {
        input.setCustomValidity("");
        pwdError.style.display = "none";
        pwdError.innerHTML = "";
    }
}

        function validateConfirmPassword(input) {
            const password = document.getElementById('password').value.trim();
            const value = input.value.trim();
            console.log("values::",password,value);
            if (value !== password) {
                input.setCustomValidity("Passwords do not match.");
                conPwdError.style.display="block";
                conPwdError.innerHTML="Incorrect password !";
            } else {
                input.setCustomValidity("");
                showErrorMessage(input, "");
            }
        }
        function showErrorMessage(input, message) {
            const messageDiv = input.nextElementSibling;
            messageDiv.textContent = message;
            messageDiv.style.display = message ? 'block' : 'none';
        }
